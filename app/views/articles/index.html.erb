<h1>Listing articles</h1>

<% if admin_signed_in? %>
<%= link_to 'New Article', new_article_path %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Subject</th>
      <th>Preview</th>
      <% if admin_signed_in? %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= image_tag article.photo(:thumb) %></td>
        <td><%= link_to article.subject, article %></td>
        <td><%= article.preview.html_safe %></td>
        <% if admin_signed_in? %>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>

<br>


