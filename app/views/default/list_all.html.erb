<div class="list-group">
  <% @articles.each do |article| %>
  <a href="/api/articles/<%=article.id%>" class="list-group-item">

    <div class="row">
    <div class="col-sm-2 pull-left">
      <%=image_tag article.photo.url(:thumb)%>
    </div>

      <div class="col-sm-10">

        <h4>

          <%=article.subject%>
            <br/>

          <small><%= Nokogiri::parse(article.preview).text%></small>
        </h4>

      </div>

    </div>
  </a>
  <% end %>

</div>